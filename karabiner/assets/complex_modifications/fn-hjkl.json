{
  "title": "fn + hjkl = arrows",
  "rules": [
    {
      "description": "fn + h = left",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "h", "modifiers": { "mandatory": ["fn"] } },
          "to": [{ "key_code": "left_arrow" }]
        }
      ]
    },
    {
      "description": "fn + j = down",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "j", "modifiers": { "mandatory": ["fn"] } },
          "to": [{ "key_code": "down_arrow" }]
        }
      ]
    },
    {
      "description": "fn + k = up",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "k", "modifiers": { "mandatory": ["fn"] } },
          "to": [{ "key_code": "up_arrow" }]
        }
      ]
    },
    {
      "description": "fn + l = right",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "l", "modifiers": { "mandatory": ["fn"] } },
          "to": [{ "key_code": "right_arrow" }]
        }
      ]
    }
  ]
}
